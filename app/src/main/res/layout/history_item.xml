<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llTicketMenu"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_40"
    android:foreground="?android:attr/selectableItemBackground">

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.5dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tvDish_img"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/img_menu_sample_a_01" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tvDish_color"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@color/color_47" />

                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvDish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:text="Making..."
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lvDishes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:dividerHeight="0dp"
                android:divider="@null"
                android:layout_gravity="top"
                android:listSelector="@android:color/transparent" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.5dp"
                android:textSize="12sp"
                android:textColor="@color/color_10" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24.5dp"
            android:layout_marginRight="24.5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/img_arrow_enter" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

</LinearLayout>