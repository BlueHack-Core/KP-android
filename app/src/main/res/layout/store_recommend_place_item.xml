<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/store_card_view"
        android:layout_width="match_parent"
        android:layout_height="81.5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        card:cardCornerRadius="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21.5dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/img_store_suggest" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10.5dp"
                android:layout_marginTop="18.5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/store_txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_store_name"
                    android:textColor="@color/color_04"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/store_txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    android:text="@string/txt_store_address"
                    android:textColor="@color/color_04"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/store_txt_meter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:gravity="right|center_horizontal"
                    android:text="@string/txt_store_meter"
                    android:textColor="@color/color_25"
                    android:textSize="16sp" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>