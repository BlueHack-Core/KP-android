<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="missingPrefix"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/home_title_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tool_bar_home_title"
                android:textSize="18sp"
                android:textColor="@color/color_02"
                android:layout_gravity="center"
                app:font="custom1" />
        </FrameLayout>

    </RelativeLayout>

    <include layout="@layout/content_home" />

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="226dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/color_03"
        app:headerLayout="@layout/drawer_header"
        app:itemTextColor="@android:color/black"
        app:itemIconTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/drawer_header_iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_menu_close"></FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include layout="@layout/drawer_list" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="18dp"
            android:background="@drawable/img_brand_logo">

        </FrameLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>