<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="missingPrefix"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--fixed bottom btn-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/payment_btn_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_type1_click_event" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/payment_btn_payment"
                android:layout_alignStart="@id/payment_btn_payment"
                android:layout_alignEnd="@id/payment_btn_payment"
                android:layout_alignTop="@id/payment_btn_payment"
                android:text="@string/payment_btn_title"
                android:textSize="17sp"
                android:textColor="@color/color_03"
                android:gravity="center|center_horizontal"
                app:font="custom1" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>