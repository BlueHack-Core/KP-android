<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/order_catalog_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        card:cardCornerRadius="1dp">

        <LinearLayout
            android:layout_width="103.5dp"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_order_catalog_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/txt_order_catalog_name_01"
                android:textSize="14sp"
                android:textColor="@drawable/catalog_text_color"
                android:gravity="center|center_horizontal"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>