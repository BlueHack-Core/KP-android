<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/menu_card_view"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        card_view:cardUseCompatPadding="false"
        android:layout_marginBottom="0dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/menu_item_img_left_padding"
                android:gravity="start|center">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/menu_iv_img"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="start|center"
                android:layout_marginStart="@dimen/menu_item_ll_tv_left_margin">

                <TextView
                    android:id="@+id/menu_cv_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_13"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/menu_item_tv_bottom_margin" />

                <TextView
                    android:id="@+id/menu_cv_text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/color_10" />

                <TextView
                    android:id="@+id/menu_cv_text_calory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/color_10" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center"
                android:paddingRight="@dimen/subcategory_item_iv_right_padding">

                <ImageView
                    android:id="@+id/menu_cv_iv_btn"
                    android:layout_width="9dp"
                    android:layout_height="16.5dp"
                    android:background="@drawable/img_arrow_enter" />
            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_12"
            android:layout_gravity="bottom" />
    </android.support.v7.widget.CardView>

</RelativeLayout>